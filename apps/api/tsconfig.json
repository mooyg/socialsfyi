{
  "extends": "@socialsfyi/tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["esnext"],
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "useUnknownInCatchVariables": true,
    "paths": {
      "@socialsfyi/api/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "dist",
    "build",
    ".turbo",
    "drizzle.config.ts"
  ]
}
